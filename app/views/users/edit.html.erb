<main>
  <%= notice %>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <% if @user.errors.any? %>
          <%= @user.errors.count %>
          <%= @user.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>

        <%= form_with model:@user, local:true do |f| %>
          <label for="user_name">Name</label>
          <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
          <div><%= attachment_image_tag @user, :profile_image, size: '60x60', fallback: "no_image.jpg"%></div>
          <label for="inputImage">ProfileImage</label>
          <div><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></div>
          <label for="user_introduction">Introduction</label>
          <div><%= f.text_area :introduction %></div>
          <div><%= f.submit "Update User" %></div>
        <% end %>
      </div>
    </div>
  </div>
</main>
